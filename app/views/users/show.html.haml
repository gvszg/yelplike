%article.user
  %section.user.container
    .row.col-sm-11
      %user.col-sm-10.col-sm-offset-1
        %header
          %h1 #{@user.full_name}'s Reviews
        %ul
          - @user.reviews.each do |review|    
            %li.row
              .col-sm-3
                %p
                  = link_to review.business.name, review.business
                %p Rating: #{review.rating} / 5
              .col-sm-8
                %p= review.content
