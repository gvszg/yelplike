%section.new_biz.container
  .row
    .col-sm-10.col-sm-offset-1
      %form.form-horizontal
        %header
          %h1 Add a new business 
        %fieldset
          .form-group
            %label.control-label.col-sm-2 Name
            .col-sm-6
              %input.form-control(type="text")
          .form-group
            %label.control-label.col-sm-2 Address
            .col-sm-6
              %input.form-control(type="text")
          .form-group
            %label.control-label.col-sm-2 Region
            .col-sm-6
              %input.form-control(type="text")
          .form-group
            %label.control-label.col-sm-2 Country
            .col-sm-6
              %input.form-control(type="text")
          .form-group
            %label.control-label.col-sm-2 Category
            .row
              .col-sm-3
                %select.form-control(name="")
                  %option(value="1") Coffee & Tea
                  %option(value="2") Restaurants
                  %option(value="3") Bars              
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %input(type="submit" value="Create Business" class="btn btn-default")
