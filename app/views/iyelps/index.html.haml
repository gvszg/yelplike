%article.iyelps
  %section.iyelps.container
    .row
      %iyelps.col-sm-9.col-sm-offset-1
        %header
          %h1 My Businesses
        %table.table
          %thead
            %tr
              %th Name
              %th Genre
              %th Country
              %th Region
              %th Address
          %tbody
            - @iyelps.each do |business|
              %tr
                %td= link_to business.name, business
                %td= link_to business.category.name, business.category
                %td= business.country
                %td= business.region
                %td= business.address
      .new_iyelp.col-sm-2.col-sm-offset-1
        = link_to new_business_path, class: 'btn btn-primary btn-lg' do
          Add New Business
